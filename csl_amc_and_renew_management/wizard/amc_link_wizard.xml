<odoo>
    <record id="view_amc_link_wizard_form" model="ir.ui.view">
    <field name="name">amc.link.wizard.form</field>
    <field name="model">amc.link.wizard</field>
    <field name="arch" type="xml">
        <form string="Link AMC">
        <group>
            <field name="sale_order_id" readonly="1"/>
            <field name="amc_id" options="{'no_open': True}"/>
        </group>
        <footer>
            <button name="action_link" type="object" string="Link" class="btn-primary"/>
            <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
        </form>
    </field>
    </record>

</odoo>