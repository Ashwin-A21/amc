<odoo>
    <record id="view_move_form_amc_renew_button" model="ir.ui.view">
        <field name="name">account.move.form.amc.renew.manual</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="amc_renewal_updated" invisible="1"/>

                <button name="button_renew_amc"
                        string="Update Renewal Date"
                        type="object"
                        class="btn btn-primary o_form_button"
                        invisible="state != 'posted' or amc_renewal_updated == True"/>

                <button string="Renewal Updated"
                        class="btn btn-secondary"
                        invisible="state != 'posted' or amc_renewal_updated == False"
                        disabled="1"/>
            </xpath>
        </field>
    </record>
</odoo>