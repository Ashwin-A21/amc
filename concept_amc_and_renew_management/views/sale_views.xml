<odoo>
    <record id="view_order_form_inherit_amc_button" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.amc.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Inject into smart button box -->
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button type="object"
                        name="action_open_amc"
                        class="oe_stat_button"
                        icon="fa-file-text-o"
                        string="AMC">
                    <field name="amc_id" invisible="1"/>
                </button>
            </xpath>

        </field>
    </record>

    <record id="sale_order_view_form_inherit_amc_link" model="ir.ui.view">
    <field name="name">sale.order.form.amc.link</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
        <button name="action_link_amc" type="object" string="Link AMC" class="oe_highlight"
                invisible="amc_id or state not in ('sale')"/>
        </xpath>
    </field>
</record>
</odoo>
